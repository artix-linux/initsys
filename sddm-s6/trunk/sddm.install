pre_upgrade() {
    old_sddm=$(find /etc/s6/sv/sddm/run)
    if [ -n "$old_sddm" ]; then
        touch /etc/s6/config/old_sddm
    fi
}

post_upgrade() {
    if [ -e /etc/s6/config/old_sddm ]; then
        echo "sddm -> sddm-log" >> /etc/s6/config/convfile
        rm /etc/s6/config/old_sddm
    fi
}
